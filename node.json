{
  "system": {
    "short_hostname":"openvpn",
    "domain_name":"localdomain"
  },
  "authorization": {
    "sudo": {
      "groups": [ "vagrant" ],
      "users": [ "vagrant" ],
      "passwordless":"true",
      "include_sudoers_d":"true"
    }
  },
  "openvpn" : {
    "script_security":"2",
    "key" : {
      "country":"Australia",
      "province":"New South Wales",
      "city":"Sydney",
      "org":"Acme",
      "email":"foo@bar.suf",
      "ca_expire":"365",
      "expire":"14",
      "size":"1024"
    }
  },
  "run_list": [ "recipe[system]", "recipe[ntp]", "recipe[resolver]", "recipe[cron]", "recipe[sudo]", "recipe[openvpn]" ]
}